<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--map-->

    <Button
        android:id="@+id/endInspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_inspection"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/setcurrentlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="14dp"
        android:text="Show Cur Location"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/adddefect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_defect"
        android:layout_alignBaseline="@+id/setcurrentlocation"
        android:layout_alignBottom="@+id/setcurrentlocation"
        android:layout_alignEnd="@+id/endInspection" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setcurrentlocation"
        android:layout_alignStart="@+id/setcurrentlocation"
        android:text="Launch Map" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapButton"
        android:layout_alignTop="@+id/endInspection"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="GPS Coords" />


</RelativeLayout>